{
  "name": "get_directions",
  "description": "Get directions between two or more points using driving/walking/transit modes.",
  "parameters": {
    "type": "object",
    "properties": {
      "origin": { "type": "string" },
      "destination": { "type": "string" },
      "waypoints": {
        "type": "array",
        "items": { "type": "string" }
      },
      "mode": { "type": "string", "enum": ["driving", "walking", "transit"] }
    },
    "required": ["origin", "destination"]
  }
}

