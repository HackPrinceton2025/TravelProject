{
  "name": "find_stays",
  "description": "Find hotels or stays near a location within a budget and date range.",
  "parameters": {
    "type": "object",
    "properties": {
      "location": { "type": "string" },
      "checkIn": { "type": "string", "format": "date" },
      "checkOut": { "type": "string", "format": "date" },
      "guests": { "type": "number", "minimum": 1 },
      "budgetPerNight": { "type": "number", "minimum": 0 }
    },
    "required": ["location", "checkIn", "checkOut", "guests"]
  }
}

