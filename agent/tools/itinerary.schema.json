{
  "name": "generate_itinerary",
  "description": "Generate a day-by-day itinerary for a given destination and interests.",
  "parameters": {
    "type": "object",
    "properties": {
      "destination": { "type": "string" },
      "days": { "type": "number", "minimum": 1 },
      "interests": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "required": ["destination", "days"]
  }
}

